---
interface Props {
	title: string;
	href?: string;
    bgColor?: string;
    color?: string
    download?:string
    disabled?: boolean
    type?: "button" | "submit" | "reset"; 
}

const { href, title, bgColor, color="white", download, disabled="false", type="button" } = Astro.props;
---
<a href={href} download={download}>
    <button disabled={disabled} type={type} style={{ backgroundColor: bgColor, color: color }}>
        {title}
    </button>
</a>

<style>
   button {
  border: none;
  margin-top: 20px;
  padding: 3px 10px;
  border-radius: 5px;
  cursor: pointer;
  overflow: hidden;
  position: relative;
  transition: all 0.8s ease;
}

button:before,
button:after {
  position: absolute;
  display: block;
  content: "";
  width: 100%;
  height: 100%;
  left: 100%;
  top: 1%;
}

button:after {
  left: -100%;
  clip-path: polygon(10% 0, 70% 0, 90% 100%, 30% 100%);
  background-color: rgba(255, 255, 255, 0.6);
  transition: all 300ms ease;
}

button:hover::after {
  left: 100%;
  top: 1%;
}
</style>